{
	"compilerOptions": {
		"target": "ES2019",
		"lib": ["ES2019"],
		"module": "commonjs",
		"moduleResolution": "node",
		"outDir": "./dist",
		"rootDir": "./",
		"strict": false,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"declaration": true,
		"declarationMap": true,
		"sourceMap": true,
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"resolveJsonModule": true,
		"noImplicitAny": false
	},
	"include": [
		"credentials/**/*",
		"nodes/**/*"
	],
	"exclude": [
		"node_modules",
		"node_modules/**/*",
		"dist/**/*",
		"**/node_modules/**/*",
		"../../node_modules/**/*"
	],
	"typeRoots": [
		"./node_modules/@types"
	]
}